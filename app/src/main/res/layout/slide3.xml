<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dots_color"
            android:text="@string/chat_with_an_agent"
            android:textSize="30dp"
            android:alpha="0.8"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/dp80"
            android:layout_marginEnd="@dimen/dp80"/>

        <ImageView
            android:layout_marginTop="@dimen/dp50"
            android:layout_width="@dimen/dp150"
            android:layout_height="@dimen/dp150"
            android:alpha="0.8"
            android:src="@drawable/seller"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_text"
            android:layout_marginTop="@dimen/dp80"
            android:layout_marginBottom="@dimen/dp50"
            android:layout_marginEnd="@dimen/dp60"
            android:layout_marginStart="@dimen/dp60"
            android:textAlignment="center"
            android:text="@string/get_in_touch_with_our_agent_and_resolve_your_queries"/>
    </LinearLayout>


</RelativeLayout>